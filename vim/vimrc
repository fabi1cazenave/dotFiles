" set gdefault                      " regexp: s/foo/bar/g by default
set formatoptions=croqlj            " 'j' kills ponies
set nojoinspaces                    " let 'J' be 'gJ'

let $VIMHOME = glob('~/.vim')   	" main Vim configuration directory
"let $VIMHOME = expand('%:p:h')  	" directory of current vimrc file (~/.vim)
